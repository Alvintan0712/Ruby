<%= form_with(model: item, url: url) do |form| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :properties, class: "form-label" %>
    <%= form.text_area :properties, size: '1x2', class: "form-control" %>
  </div>

  <div class="mb-4 row row-cols-lg-auto g-2 align-items-center">
    <%= form.label :cost, class: "form-label" %>
    <div class="col-12">
      <%= form.number_field :cost, class: "form-control", min: "0" %>
    </div>
  </div>

  <div class="mb-4 row row-cols-lg-auto g-2 align-items-center">
    <%= form.label :stock, class: "form-label" %>
    <div class="col-12">
      <%= form.number_field :stock, class: "form-control", min: "0" %>
    </div>
  </div>

  <%= form.hidden_field :product_id, value: product.id %>

  <div class="actions mb-4">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
