<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="mb-4">
    <%= f.label :email_or_username, class: "form-label" %><br/>
    <%= f.text_field :login, class: "form-control", autofocus: true, autocomplete: "login" %>
  </div>

  <div class="mb-4">
    <%= f.label :password, class: "form-label" %><br/>
    <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="d-flex mb-4">
      <div class="mb-3 form-check">
        <%= f.check_box :remember_me, class: "form-check-input" %>
        <%= f.label :remember_me, class: "form-check-label" %>
      </div>
      <div style="margin-left: 70%;">
        <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
      </div>
    </div>
  <% end %>
  <div class="actions mb-4">
    <%= f.submit "Log in", class: "btn btn-primary" %>
  </div>
<% end %>

<p class="text-center">
  Don't have account?
  <%= link_to "Sign up", new_registration_path(resource_name), style: "margin-left: 1%" %><br />
</p>

