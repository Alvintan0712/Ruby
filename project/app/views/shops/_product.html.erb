<div class="d-sm-flex justify-content-between align-items-center my-2 pb-3 border-bottom">
  <div class="d-block d-sm-flex align-items-center text-center text-sm-start">
    <div class="d-inline-block flex-shrink-0 mx-auto me-sm-4">
      <% if image = Image.find_by(product: product) %>
        <%= image_tag image.image, style: 'width: 160px' %>
      <% end %>
    </div>
    <div class="pt-2">
      <h5 class="product-title fs-base mb-2"><%= link_to product.name, product %></h5>
      <div class="fs-sm"><span class="text-muted me-2">Have <%= Item.where(product: product).count %> items</span></div>
    </div>
  </div>
</div>
