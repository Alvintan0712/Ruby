<div class="d-sm-flex justify-content-between align-items-center my-2 pb-3 border-bottom">
  <div class="d-block d-sm-flex align-items-center text-center text-sm-start"><a class="d-inline-block flex-shrink-0 mx-auto me-sm-4" href="shop-single-v1.html"></a>
    <div class="pt-2">
      <h5 class="product-title fs-base mb-2"><%= link_to item.properties, product_item_path(product, item) %></h5>
      <div class="fs-sm"><span class="text-muted me-2">Stock:</span><%= item.stock %></div>
      <div class="fs-lg text-accent pt-2">$<%= item.cost %></div>
    </div>
  </div>
  <% unless current_user == product.shop.user %>
    <div class="pt-2 pt-sm-0 ps-sm-3 mx-auto mx-sm-0 text-center text-sm-start" style="max-width: 9rem;">
      <%= item_form.label :quantity, class: "form-label" %>
      <%= item_form.number_field :quantity, in: 0..item.stock, value: 0, class: "form-control" %>
    </div>
  <% end %>
</div>
